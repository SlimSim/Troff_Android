<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="#00330000"
    tools:context="com.slimsimapps.troff.MainActivity" >

    <LinearLayout
        android:layout_width="42dip"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLIGHTEST"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="42dip"
            android:layout_height="580dip">
        <SeekBar
            android:rotation="90"
            android:id="@+id/timeBar"
            android:layout_width="580dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/currentDisplayTime"
            android:textAlignment="center"
            android:text="@string/time_unknown"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLIGHTEST">
        <LinearLayout
            android:id="@+id/marker_list"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>