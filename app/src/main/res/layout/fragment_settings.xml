<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="slimsimapps.troff.SettingsFragment">

	<!-- TODO: Update blank fragment layout -->
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/Settings" />


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/start_before"/>
		<EditText
			android:id="@+id/settingsStartBefore"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:text="@string/_3"
			android:layout_weight="1"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/stop_after"/>
		<EditText
			android:id="@+id/settingsStopAfter"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:text="@string/_2"
			android:layout_weight="1"/>
	</LinearLayout>

	<LinearLayout
		android:visibility="gone"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/pause_before"/>
		<EditText
			android:id="@+id/settingsPauseBefore"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:text="@string/_1"
			android:layout_weight="1"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/wait_between"/>
		<EditText
			android:id="@+id/settingsWaitBetween"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:text="@string/_1"
			android:layout_weight="1"/>
	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/number_of_loops"/>

	<LinearLayout
		android:id="@+id/settingsLoopParent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<Button
				android:id="@+id/loop1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:tag="1"
				android:text="@string/_1"/>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:tag="2"
				android:text="@string/_2"/>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:tag="3"
				android:text="@string/_3"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:tag="4"
				android:text="@string/_4"/>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:tag="5"
				android:text="@string/_5"/>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:tag="6"
				android:text="@string/_6"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:tag="7"
				android:text="@string/_7"/>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:tag="8"
				android:text="@string/_8"/>
			<Button
				android:layout_width="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:layout_height="wrap_content"
				android:tag="9"
				android:text="@string/_9"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<Button
				android:layout_width="wrap_content"
				style="@style/Base.TextAppearance.AppCompat.Button"
				android:layout_height="wrap_content"
				android:tag="0"
				android:text="inf"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
